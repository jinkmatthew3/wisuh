<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_main"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--    home item-->

        <ImageButton
            android:id="@+id/btnNearby"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="284dp"
            android:layout_marginEnd="48dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_round"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nearby"
            app:layout_constraintEnd_toStartOf="@+id/btnRecommendation"
            app:layout_constraintHorizontal_bias="0.987"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnRecommendation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="284dp"
            android:layout_marginEnd="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_round"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/place"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnPlace"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="44dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_round"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/recommend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnPromo"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNearby"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnPromo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/button_round"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/promo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRecommendation"
            app:layout_constraintVertical_bias="0.0" />

        <!--    end of home item-->
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>